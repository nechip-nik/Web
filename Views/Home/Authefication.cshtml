﻿@{
    ViewData["Title"] = "Sign In / Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/auth.css">
    <script>
        function toggleForms() {
            const signInForm = document.getElementById("signInForm");
            const signUpForm = document.getElementById("signUpForm");
            signInForm.classList.toggle("d-none");
            signUpForm.classList.toggle("d-none");
        }
    </script>
</head>
<body>
    <div class="auth-container">
        <!-- Sign In Form -->
        <form id="signInForm" method="post" action="/Authefication/SignIn">
            <h2>Sign In</h2>@* 
            <div class="form-group">
                <label for="signInName">Name</label>
                <input type="text" id="signInName" name="name" class="form-control" placeholder="Enter your name" required>
            </div> *@
            <div class="form-group">
                <label for="signInEmail">Email</label>
                <input type="email" id="signInEmail" name="email" class="form-control" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="signInPassword">Password</label>
                <input type="password" id="signInPassword" name="password" class="form-control" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-custom">Sign In</button>
            <p class="toggle-link" onclick="toggleForms()">Don't have an account? Sign Up</p>
        </form>

        <!-- Sign Up Form -->
        <form id="signUpForm" method="post" action="/Authefication/SignUp" class="d-none">
            <h2>Sign Up</h2>
            <div class="form-group">
                <label for="signUpName">Name</label>
                <input type="text" id="signUpName" name="name" class="form-control" placeholder="Enter your name" required>
            </div>
            <div class="form-group">
                <label for="signUpEmail">Email</label>
                <input type="email" id="signUpEmail" name="email" class="form-control" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="signUpPassword">Password</label>
                <input type="password" id="signUpPassword" name="password" class="form-control" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-custom">Sign Up</button>
            <p class="toggle-link" onclick="toggleForms()">Already have an account? Sign In</p>
        </form>
    </div>

</body>
</html>